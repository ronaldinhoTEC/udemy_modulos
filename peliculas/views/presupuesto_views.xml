<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_presupuesto_form" model="ir.ui.view">
        <field name="name">vista formulario de presupuesto</field>
        <field name="model">presupuesto</field>
        <field name="arch" type="xml">
            <form>
                <sheet> 
                    <widget name="web_ribbon" title="Archivado" bg_color="bg-danger" attrs="{'invisible': [('active','=',True)]}" />
                    <!-- Añadimos una imagen  -->
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128', 'size': ['',128]}"/>
                    <!-- Añadimos un titulo Grande -->
                    <div class="oe_title">
                        <div class="o_row">
                            <field name="active" invisible="1"/>
                            <h1 style="color: #202124; display: flex">
                                <field name="name" placeholder="Nombre de la pelicula" default_focus="1" class="oe_inline"/>
                                <field name="puntuacion" widget="percentpie" string=" " style="padding-left: 15px" class="oe_inline"/>
                                <field name="puntuacion2" placeholder="Puntuacion del usuario" class="oe_edit_only oe_inline"/>
                            </h1>
                        </div>
                        <div class="o_row" style="display: flex">
                            <field name="clasificacion"/>
                            <span class="fa fa-circle" attrs="{'invisible': [('clasificacion','=', False), ('fecha_estreno','=', False)]}" style="font-size: 10px; margin: 0 10px 0 10px"/>
                            <field name="fecha_estreno"/>
                        </div>
                        <div class="o_row">
                            <field name="genero_ids" widget="many2many_tags" style="display: flex;"/>
                        </div>
                    </div>
                    <group string="Datos Principales" style="margin-top: -20px">
                        <field name="vista_general" placeholder="Vista General"/>
                        <group string="">
                            <field name="director_id"/>
                            <field name="link_trailer"/>
                        </group>
                        <group string="">
                            <field name="es_libro" widget="boolean_toggle"/>
                            <field name="libro" filename="libro_filename" attrs="{'invisible': [('es_libro','=', False)]}"/>
                            <field name="libro_filename" invisible="1"/>
                        </group>
                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>