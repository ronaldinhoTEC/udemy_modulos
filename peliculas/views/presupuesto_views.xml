<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_presupuesto_form" model="ir.ui.view">
        <field name="name">vista formulario de presupuesto</field>
        <field name="model">presupuesto</field>
        <field name="arch" type="xml">
            <form>
                <sheet> 
                    <widget name="web_ribbon" title="Archivado" bg_color="bg-danger" attrs="{'invisible': [('active','=',True)]}" />
                    <!-- Añadimos una imagen  -->
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128', 'size': ['',128]}"/>
                    <!-- Añadimos un titulo Grande -->
                    <div class="oe_title">
                        <div class="o_row">
                            <field name="active" invisible="1"/>
                            <h1 style="color: #202124; display: flex">
                                <field name="name" placeholder="Nombre de la pelicula" default_focus="1" class="oe_inline"/>
                                <field name="puntuacion" widget="percentpie" string=" " style="padding-left: 15px" class="oe_inline"/>
                                <field name="puntuacion2" placeholder="Puntuacion del usuario" class="oe_edit_only oe_inline"/>
                            </h1>
                        </div>
                        <div class="o_row" >
                            <field name="clasificacion"/>
                            <span class="fa fa-circle" attrs="{'invisible': [('clasificacion','=', False), ('fecha_estreno','=', False)]}" />
                            <field name="fecha_estreno"/>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
</odoo>