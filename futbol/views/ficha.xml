<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_ficha_form" model="ir.ui.view">
        <field name="name">Vista formulario de ficha </field>
        <field name="model">ficha.jugador</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="Datos generales del jugador">
                    <group string="Datos Personales">
                        <field name="name"/>
                        <field name="apellido"/>
                        <field name="nombre_deportivo"/>
                        <field name="fecha_nacimiento"/>
                        <field name="edad"/>
                        <field name="dni"/>
                    </group>
                    <group name="name" string="Datos de contacto">
                        <field name="celular"/>
                        <field name="email"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>